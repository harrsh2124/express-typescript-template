{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "Express Boilerplate to use for all typescript/node project as API.",
  "main": "src/app.ts",
  "repository": "https://github.com/harrsh2124/express-typescript-template.git",
  "author": "Harrsh Patel <dev@harrsh.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts | pino-pretty -t='SYS:ddd mmm dd yyyy h:MM:ss TT'",
    "build": "rimraf dist && npx tsc",
    "start": "node dist/app.js",
    "format": "prettier --write \"**/*.+(ts|json|yml|yaml|md)\""
  },
  "dependencies": {
    "@types/errorhandler": "^1.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.6.0",
    "hbs": "^4.2.0",
    "helmet": "^6.0.0",
    "pino": "^8.5.0",
    "prettier": "^2.7.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.7.16",
    "pino-pretty": "^9.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "*"
  }
}
